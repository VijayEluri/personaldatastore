				<version>2.3</version>
				<configuration>
					<archive>
						<manifest>
							<mainClass>pds.solution.plug.JettyServer</mainClass>
						</manifest>
					</archive>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>

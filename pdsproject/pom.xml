<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>pdsproject</groupId>
	<artifactId>pdsproject</artifactId>
	<packaging>pom</packaging>
	<name>pdsproject</name>
	<version>0.1-SNAPSHOT</version>
	<description>
		Reference implementation of a Personal Data Store (PDS).
	</description>
	<modules>
		<module>../pds.core</module>
		<module>../pds.core.base</module>
		<module>../pds.core.any</module>
		<module>../pds.core.single</module>
		<module>../pds.core.xri</module>
		<module>../pds.discovery</module>
		<module>../pds.profile</module>
		<module>../pds.web</module>
		<module>../pds.web.base</module>
		<module>../pds.web.xdi</module>
		<module>../pds.web.logger</module>
		<module>../pds.web.tools</module>
		<module>../pds.web.signin.rpxnow</module>
		<module>../pds.web.signin.xri</module>
		<module>../pds.web.signup.xri</module>
 		<module>../pds.web.signup.xri.openxri</module>
		<module>../pds.web.signup.xri.grs</module>
		<module>../pds.web.ui.app.addressbook</module>
		<module>../pds.web.ui.app.feed</module>
		<module>../pds.web.ui.app.photos</module>
		<module>../pds.web.ui.app.directxdi</module>
		<module>../pds.endpoint.feed</module>
		<module>../pds.store.user</module>
		<module>../pds.store.xri</module>
		<module>../pds.store.xri.openxri</module>
		<module>../pds.store.xri.grs</module>
		<module>../pds.util.spring</module>
	</modules>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-install-plugin</artifactId>
				<executions>
					<execution>
						<id>execution1</id>
						<phase>initialize</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<groupId>org.eclipse.higgins</groupId>
							<artifactId>xdi4j</artifactId>
							<version>1.0.800</version>
							<packaging>jar</packaging>
							<file>${basedir}/../pdsproject/lib/higgins-xdi4j_1.0.800.jar</file>
						</configuration>
					</execution>
					<execution>
						<id>execution2</id>
						<phase>initialize</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<groupId>com.sleepycat</groupId>
							<artifactId>je</artifactId>
							<version>4.0.103</version>
							<packaging>jar</packaging>
							<file>${basedir}/../pdsproject/lib/je-4.0.103.jar</file>
						</configuration>
					</execution>
					<execution>
						<id>execution3</id>
						<phase>initialize</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<groupId>org.json</groupId>
							<artifactId>json</artifactId>
							<version>1.0</version>
							<packaging>jar</packaging>
							<file>${basedir}/../pdsproject/lib/json.jar</file>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>

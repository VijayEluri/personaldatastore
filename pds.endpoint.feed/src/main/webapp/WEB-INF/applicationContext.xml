<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<!-- Servlets -->

	<bean id="RssFeedServlet" class="pds.endpoint.feed.FeedServlet" init-method="init">
		<property name="format" value="rss_2.0" />
		<property name="hub" value="http://pubsubhubbub.appspot.com/" />
		<property name="selfEndpoint" value="http://ginger.freexri.com:11080/pds-endpoint-feed/rss/" />
		<property name="salmonEndpoint" value="http://ginger.freexri.com:11080/pds-endpoint-salmon/" />
	</bean>

	<bean id="AtomFeedServlet" class="pds.endpoint.feed.FeedServlet" init-method="init">
		<property name="format" value="atom_2.0" />
		<property name="hub" value="http://pubsubhubbub.appspot.com/" />
		<property name="selfEndpoint" value="http://ginger.freexri.com:11080/pds-endpoint-feed/atom/" />
		<property name="salmonEndpoint" value="http://ginger.freexri.com:11080/pds-endpoint-salmon/" />
	</bean>

</beans>

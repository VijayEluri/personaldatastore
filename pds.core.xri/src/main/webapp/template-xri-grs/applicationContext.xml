<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<!-- PDS Connection Factory (pds.core.xri / pds.store.xri.grs) -->

	<bean id="pdsConnectionFactory" class="pds.core.xri.XriPdsConnectionFactory">
		<property name="properties">
			<util:properties location="/WEB-INF/application.properties" />
		</property>
		<property name="xriStore" ref="xriStore" />
		<property name="userStore" ref="userStore" />
	</bean>

	<bean id="xriStore" class="pds.store.xri.grs.GrsXriStoreFactory" factory-method="getXriStore">
		<constructor-arg>
			<util:properties />
		</constructor-arg>
		<constructor-arg>
			<bean class="ibrokerkit.epptools4java">
				<constructor-arg>
					<util:properties location="/WEB-INF/epptools.properties" />
				</constructor-arg>
			</bean>
		</constructor-arg>
	</bean>

	<bean id="userStore" class="pds.store.user.impl.db.DatabaseStore">
		<constructor-arg>
			<util:properties location="/WEB-INF/pds.store.user.properties" />
		</constructor-arg>
	</bean>

	<!-- PDS Filter -->

	<bean id="pdsFilter" class="pds.core.pdsFilter">
		<property name="endpointServlet" ref="endpointServlet" />
		<property name="pdsConnectionFactory" ref="pdsConnectionFactory" />
	</bean>

	<!-- XDI Servlet -->

	<bean id="endpointServlet" class="org.eclipse.higgins.xdi4j.messaging.server.EndpointServlet" />

	<bean name="/" class="org.eclipse.higgins.xdi4j.messaging.server.impl.CompoundMessagingTarget">
		<property name="mode" value="first-handled" />
		<property name="messagingTargets">
			<list>
				<bean class="pds.core.xri.messagingtargets.XriOperationMessagingTarget">
					<property name="xriStore" ref="xriStore" />
					<property name="userStore" ref="userStore" />
				</bean>
				<bean class="pds.core.xri.messagingtargets.XriResourceMessagingTarget">
					<property name="xriStore" ref="xriStore" />
				</bean>
			</list>
		</property> 
	</bean>
</beans>

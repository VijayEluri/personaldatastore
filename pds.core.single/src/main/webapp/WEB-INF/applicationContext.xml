<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<!-- PDS Connection Factory (pds.core.single) -->
	<!-- You need to configure the following settings to match your environment. -->

	<bean id="pdsConnectionFactory" class="pds.core.single.SinglePdsConnectionFactory">

		<!-- The canonical identifier for your PDS. -->
		<!-- This should be an resolvable identifier (e.g. an i-number, URI, e-mail address). -->
		<!-- See pds-discovery for more information about identifiers and resolution. -->

		<property name="identifier" value="=!1111.2222.3333.4444" />

		<!-- Other identifiers for your PDS. -->

		<property name="aliases">
			<list>
				<value>=yourname</value>
			</list>
		</property>

		<!-- One or more URIs where this PDS is deployed. -->
		<!-- If this is empty, the PDS will try to auto-detect its URI. -->

		<property name="endpoints">
			<list>
				<value>http://xdi.yourserver.com/</value>
			</list>
		</property>
	</bean>

	<!-- PDS Filter -->
	<!-- Do not modify this, unless you know what you are doing. -->

	<bean id="PdsFilter" class="pds.core.PdsFilter">
		<property name="endpointServlet" ref="EndpointServlet" />
		<property name="pdsConnectionFactory" ref="pdsConnectionFactory" />
	</bean>

	<!-- XDI Servlet -->
	<!-- Do not modify this, unless you know what you are doing. -->

	<bean id="EndpointServlet" class="org.eclipse.higgins.xdi4j.messaging.server.EndpointServlet" />

</beans>

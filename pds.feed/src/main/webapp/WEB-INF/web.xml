<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>

	<display-name>pds.feed</display-name>

	<servlet>
		<servlet-name>RssFeedServlet</servlet-name>
		<servlet-class>pds.feed.FeedServlet</servlet-class>
		<init-param>
			<param-name>feedtype</param-name>
			<param-value>rss_2.0</param-value>
		</init-param>
	</servlet>

	<servlet>
		<servlet-name>AtomFeedServlet</servlet-name>
		<servlet-class>pds.feed.FeedServlet</servlet-class>
		<init-param>
			<param-name>feedtype</param-name>
			<param-value>atom_1.0</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>RssFeedServlet</servlet-name>
		<url-pattern>/rss/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>AtomFeedServlet</servlet-name>
		<url-pattern>/atom/*</url-pattern>
	</servlet-mapping>

</web-app>